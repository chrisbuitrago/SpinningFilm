@model SpinningFilm.ViewModels.LoginViewModel

@{
    Layout = "_Layout-Basic";
}
    <div class="p-5">
        @ViewBag.Message
        <div class="row">
            <div class="col-6 h4">
                <div class="pb-5">
                    <h2>Spinning Film</h2>
                </div>
                <div class="pb-5">
                    <i class="fa fa-archive text-light-blue"></i>
                    Organize your movie collection
                </div>
                <div class="pb-5">
                    <i class="fa fa-video text-light-blue"></i>
                    Keep track of when you've watched your movies
                </div>
                <div class="pb-5">
                    <i class="fa fa-info text-light-blue"></i>
                    Get quick information about all your movies
                </div>
            </div>
            <div class="col-6">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm", @class = "form-signin" }))
                {
                    @Html.HiddenFor(model => model.ReturnUrl)
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control required", placeholder = "Email..." })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control required", placeholder = "Password...", @type = "password" })
                        <div>
                            <a href="@Url.Action("ForgotPassword", "Account")" class="text-secondary">Forgot your password?</a>
                        </div>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Login" />
                }
                <div class="pt-5">
                    <h4>New to Movie List?</h4>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Sign Up</a>
                </div>
            </div>
        </div>
    </div>




@model SpinningFilm.ViewModels.ForgotPasswordViewModel

@{
    Layout = "_Layout-Basic";
    ViewData["Title"] = "ForgotPassword";
}

    <div class="p-5">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "The following errors occurred:", new { @class = "text-danger" })
                    <div class="form-group">
                        <h4>Password Recovery</h4>                 
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control", placeholder = "Enter the email address associated with your account..." })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                    </div>
                    <input type="submit" class="btn btn-primary" value="Submit" />
                }
            </div>
        </div>
    </div>

